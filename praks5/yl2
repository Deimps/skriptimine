#!/bin/bash
# Eesm채rk: k체si kuu number (1..12) ja v채ljasta aastaaeg.

printf "Sisesta kuu number (1-12): "
read -r kuu

# Kontrolli 1..12
if ! [[ "$kuu" =~ ^[0-9]+$ ]] || [ "$kuu" -lt 1 ] || [ "$kuu" -gt 12 ]; then
  echo "vigane sisend"
  exit 1
fi

case "$kuu" in
  12|1|2)  echo "Praegu on talv" ;;
  3|4|5)   echo "Praegu on kevad" ;;
  6|7|8)   echo "Praegu on suvi" ;;
  9|10|11) echo "Praegu on s체gis" ;;
esac
